<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <TextView
        android:id="@+id/text_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/settings_operator_title"
        style="@style/input_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="@string/settings_operator_name"
        app:endIconDrawable="@drawable/ic_clear"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconContentDescription="@string/settings_operator_name"
        app:startIconDrawable="@drawable/ic_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_operator"
            style="@style/input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/settings_password_warning"
        style="@style/header_text_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:background="@drawable/rounded_box_framed"
        android:text="@string/settings_password_warning"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/settings_password_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_operator_title" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/settings_password_title"
        style="@style/input_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="@string/settings_input_password"
        app:endIconDrawable="@drawable/button_visibility"
        app:endIconMode="password_toggle"
        app:layout_constraintBottom_toTopOf="@id/settings_password_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_password_warning"
        app:startIconContentDescription="@string/settings_input_password"
        app:startIconDrawable="@drawable/ic_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_password"
            style="@style/input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_password_button"
        style="@style/button_general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:minWidth="220dp"
        android:text="@string/button_unblock_settings"
        app:icon="@drawable/ic_unlock"
        app:layout_constraintBottom_toTopOf="@id/settings_measuring_radius_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_password_title" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/settings_measuring_radius_title"
        style="@style/input_edit_text_disabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="@string/settings_transport_wheel"
        app:endIconDrawable="@drawable/ic_clear"
        app:endIconMode="clear_text"
        app:helperText="@string/settings_input_radius"
        app:layout_constraintBottom_toTopOf="@id/settings_driving_radius_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_password_button"
        app:suffixText="@string/settings_mm">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_measuring_radius"
            style="@style/input_edit_text_disabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/settings_driving_radius_title"
        style="@style/input_edit_text_disabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="@string/settings_measuring_wheel"
        app:endIconDrawable="@drawable/ic_clear"
        app:endIconMode="clear_text"
        app:helperText="@string/settings_input_radius"
        app:layout_constraintBottom_toTopOf="@id/settings_slip_ratio_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_measuring_radius_title"
        app:suffixText="@string/settings_mm">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_driving_radius"
            style="@style/input_edit_text_disabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/settings_slip_ratio_title"
        style="@style/input_edit_text_disabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="@string/settings_slip_ratio"
        app:endIconDrawable="@drawable/ic_clear"
        app:endIconMode="clear_text"
        app:helperText="@string/settings_input_value"
        app:layout_constraintBottom_toTopOf="@id/settings_calibration_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_driving_radius_title"
        app:suffixText="@string/settings_percent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_slip_ratio"
            style="@style/input_edit_text_disabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_calibration_button"
        style="@style/button_general_disabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:minWidth="220dp"
        android:text="@string/settings_calibration_button"
        app:icon="@drawable/ic_calibration"
        app:layout_constraintBottom_toTopOf="@id/settings_save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_slip_ratio_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_save_button"
        style="@style/button_general_disabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="220dp"
        android:text="@string/settings_save_button"
        app:icon="@drawable/ic_check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>