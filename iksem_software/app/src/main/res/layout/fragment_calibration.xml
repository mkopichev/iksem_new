<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calibration.CalibrationFragment">

    <TextView
        android:id="@+id/text_calibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calibration_table_title"
        style="@style/header_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/calibration_table_title"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/calibration_table_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/activity_vertical_margin"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/calibration_info_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="250dp"
        app:layout_constraintHeight_min="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calibration_table_title">

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:background="@drawable/box_all_side_framed"
            android:weightSum="7">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_force" />

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_weight" />

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_b_side_framed"
                    android:gravity="center"
                    android:letterSpacing="-0.05"
                    android:text="@string/calibration_moment" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_10_r" />

                <TextView
                    android:id="@+id/calibration_table_weight_10_forward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

                <TextView
                    android:id="@+id/calibration_table_moment_10_forward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_20_r" />

                <TextView
                    android:id="@+id/calibration_table_weight_20_forward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

                <TextView
                    android:id="@+id/calibration_table_moment_20_forward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_30_r" />

                <TextView
                    android:id="@+id/calibration_table_weight_30_forward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

                <TextView
                    android:id="@+id/calibration_table_moment_30_forward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_30_l" />

                <TextView
                    android:id="@+id/calibration_table_weight_30_backward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

                <TextView
                    android:id="@+id/calibration_table_moment_30_backward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_20_l" />

                <TextView
                    android:id="@+id/calibration_table_weight_20_backward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

                <TextView
                    android:id="@+id/calibration_table_moment_20_backward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_10_l" />

                <TextView
                    android:id="@+id/calibration_table_weight_10_backward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

                <TextView
                    android:id="@+id/calibration_table_moment_10_backward"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_weight="0.45"
            android:background="@drawable/box_all_side_framed"
            android:gravity="center"
            android:weightSum="7">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_br_side_framed" />

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_current_value" />

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_new_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_delta_W"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/calibration_delta_weight_current"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

                <TextView
                    android:id="@+id/calibration_delta_weight_new"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_delta_M"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/calibration_delta_moment_current"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

                <TextView
                    android:id="@+id/calibration_delta_moment_new"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_zero_W"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/calibration_zero_weight_current"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

                <TextView
                    android:id="@+id/calibration_zero_weight_new"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/calibration_zero_M"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/calibration_zero_moment_current"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_r_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

                <TextView
                    android:id="@+id/calibration_zero_moment_new"
                    style="@style/header_text_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/box_br_side_framed"
                    android:gravity="center"
                    android:text="@string/unknown_value" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calibration_info_area"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/rounded_box_framed"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toTopOf="@id/calibration_weight_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calibration_table_area">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:contentDescription="@string/calibration_input_weight"
            android:src="@drawable/ic_info"
            android:tint="@color/background_text" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/header_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:paddingHorizontal="@dimen/activity_horizontal_margin"
            android:text="@string/calibration_load_10_kg"
            android:textAlignment="center" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/calibration_weight_title"
        style="@style/input_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="@string/calibration_weight"
        app:endIconDrawable="@drawable/ic_clear"
        app:endIconMode="clear_text"
        app:helperText="@string/calibration_input_weight"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintBottom_toTopOf="@id/calibration_values_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calibration_info_area"
        app:startIconContentDescription="@string/calibration_input_weight"
        app:startIconDrawable="@drawable/ic_weight"
        app:suffixText="@string/home_indicators_area_kg">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/calibration_weight"
            style="@style/input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calibration_next_step"
        style="@style/button_general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:minWidth="150dp"
        android:text="@string/calibration_next_step"
        app:icon="@drawable/ic_next"
        app:layout_constraintBottom_toTopOf="@id/calibration_values_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calibration_info_area" />

    <LinearLayout
        android:id="@+id/calibration_values_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toTopOf="@id/calibration_buttons_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calibration_weight_title">

        <TextView
            style="@style/header_text_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center|end"
            android:text="@string/calibration_moment"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calibration_moment"
            style="@style/header_text_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center" />

        <TextView
            style="@style/header_text_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center|end"
            android:text="@string/calibration_friction_coef"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calibration_friction"
            style="@style/header_text_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calibration_buttons_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/calibration_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calibration_values_area">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calibration_reset_progress"
            style="@style/button_general_disabled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="0.5"
            android:text="@string/calibration_reset"
            app:icon="@drawable/ic_erase" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/calibration_accept_calibration"
            style="@style/button_general_disabled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="0.5"
            android:text="@string/calibration_accept"
            app:icon="@drawable/ic_check" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calibration_back"
        style="@style/button_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calibration_exit"
        app:icon="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>