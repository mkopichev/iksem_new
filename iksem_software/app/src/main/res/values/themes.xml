<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IKSEMSoftware" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/control</item>
        <item name="colorPrimaryVariant">@color/control_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/background_text</item>
    </style>

    <style name="button_general" parent="Widget.Material3.Button">
        <item name="android:autoSizeMaxTextSize">24sp</item>
        <item name="android:autoSizeMinTextSize">20sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:breakStrategy">balanced</item>
        <item name="android:background">@drawable/button_general</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="button_apply" parent="button_general">
        <item name="android:background">@drawable/button_apply</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="button_cancel" parent="button_general">
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>