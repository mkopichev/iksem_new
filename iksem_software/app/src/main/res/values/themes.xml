<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IKSEMSoftware" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/control</item>
        <item name="colorPrimaryVariant">@color/control_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/control_2</item>
        <item name="colorSecondaryVariant">@color/control_2_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/control_background</item>
        <item name="android:textColor">@color/background_text</item>
    </style>

    <style name="header_text_1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="header_text_2">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="header_text_3">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="header_edit_text" parent="input_edit_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="input_edit_text">
        <item name="android:textSize">18sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/background_text</item>
        <item name="android:backgroundTint">@color/background_text</item>
        <item name="android:textColorHint">@color/background_text</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="input_edit_text_disabled" parent="input_edit_text">
        <item name="android:backgroundTint">@color/background_text_hint_disabled</item>
        <item name="android:textColorHint">@color/background_text_hint_disabled</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="button_general" parent="Widget.MaterialComponents.Button">
        <item name="android:autoSizeMaxTextSize">22sp</item>
        <item name="android:autoSizeMinTextSize">18sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">2</item>
        <item name="android:breakStrategy">balanced</item>
        <item name="android:backgroundTint">@drawable/button_general</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="button_general_disabled" parent="button_general">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="button_apply" parent="button_general">
        <item name="android:backgroundTint">@drawable/button_apply</item>
        <item name="android:maxLines">1</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="button_apply_disabled" parent="button_apply">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="button_cancel" parent="button_apply">
        <item name="android:backgroundTint">@drawable/button_cancel</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="button_cancel_disabled" parent="button_cancel">
        <item name="android:backgroundTint">@drawable/button_cancel</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="button_toggle">
        <item name="android:autoSizeMaxTextSize">22sp</item>
        <item name="android:autoSizeMinTextSize">18sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">@drawable/toggle_button_item</item>
        <item name="android:background">@drawable/rounded_box_25dp_corner</item>
        <item name="android:radius">25dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>