<resources>
    <!-- Base application theme. -->
    <style name="Theme.IKSEMSoftware" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_deep</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_grayish</item>
        <item name="colorSecondaryVariant">@color/cyan_dark</item>
        <item name="colorOnSecondary">@color/red_grayish_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_over</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/background_over</item>
        <item name="android:textColor">@color/background_text</item>
        <item name="materialSwitchStyle">@style/Widget.App.Switch</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/green_light</item>
    </style>

    <style name="header_text_1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="header_text_2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="header_text_3">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="input_edit_text" parent="header_text_2">
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/background_text</item>
        <item name="android:textColorHint">@color/background_text</item>
        <item name="hintTextColor">@color/background_text</item>
        <item name="android:backgroundTint">@color/background_over</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:cursorVisible">true</item>
        <item name="startIconTint">@color/background_text</item>
        <item name="endIconTint">@color/background_text</item>
    </style>

    <style name="input_edit_text_disabled" parent="input_edit_text">
        <item name="android:backgroundTint">@color/background_over_disabled</item>
        <item name="android:textColorHint">@color/background_text_hint_disabled</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="startIconTint">@color/background_text_disabled</item>
        <item name="endIconTint">@color/background_text_disabled</item>
    </style>

    <style name="button_general" parent="Widget.Material3.Button">
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">220dp</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:autoSizeMinTextSize">16sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@drawable/button_general</item>
        <item name="android:textColor">@color/background_text</item>
        <item name="iconTint">@color/background_text</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
    </style>

    <style name="button_disabled" parent="button_general">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@color/background_text_disabled</item>
        <item name="iconTint">@color/background_text_disabled</item>
    </style>

    <style name="button_icon" parent="button_general">
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="button_icon_disabled" parent="button_disabled">
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="button_green" parent="button_general">
        <item name="android:backgroundTint">@drawable/button_green</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="button_icon_green" parent="button_green">
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="button_red" parent="button_general">
        <item name="android:backgroundTint">@drawable/button_red</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="button_icon_red" parent="button_red">
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="button_toggle">
        <item name="android:autoSizeMaxTextSize">22sp</item>
        <item name="android:autoSizeMinTextSize">18sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">@drawable/button_toggle</item>
        <item name="android:background">@drawable/rounded_box_unframed</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>